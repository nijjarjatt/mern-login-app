{
  "extends": "loopback",
  "rules": {
    "comma-dangle": [0, "never"],
    "strict": [0, "never"],
    "one-var": [0, "never"],
    "max-len": [0, { "ignoreUrls": true }],
    "object-curly-spacing": [0, "never"],
    "no-unused-expressions": [0, { "allowShortCircuit": true }],
    "indent": [0, 4],
    "space-before-function-paren": [0, "never"],
    "eslint one-var": [0, "never"],
    camelcase: [0, {properties: "never"}],
    quotes: [0, "double"],
    spaced-comment: [0, "never"]
  },
  "env": {
    "node": true,
    "es6": true
  }
}
